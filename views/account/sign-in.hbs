<link rel='stylesheet' href='/stylesheets/signin.css' />
<div class="single-pg">
	<div class="msg">
		<div class="inner">
			<div class="logo text-center">
            	<h1>Sweet!</h1>
			</div>
			<h3>Project management for developers by developers.</h3>
			<div class="features">
				<ul>
					<li>Simple</li>
					<li>Fast</li>
					<li>Beautiful</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="form">
		<form action="/sign-in" method="post" class="form-signin" >
		    <div class="username">
		    	<label for="username">Email address</label>
		    	<input type="textbox" name="username" class="form-control" required autofocus tabindex="1">
		    </div>
		    <div class="password">
		    	<label class="pull-left" for="password">Password</label>
		    	<a class="pull-right" href="/forgot-password">forgot password?</a>
		    	<input type="password" name="password" class="form-control" required  tabindex="2">	
		    </div>
		    {{#if error}}
			  	<div class="error text-danger">
    				The username or password you have entered is incorrect.
	    		</div>
			{{/if}}
		    <div class="buttons">
		    	<button class="btn btn-success" type="submit" tabindex="3">Sign in</button>
			</div>		
		    <div class="last-line">
		    	<label>Don't have an account?&nbsp;<a href="/sign-up" class="pull-right" tabindex="4">Sign Up</a></label>
			</div>			    
		</form>		
	</div>
</div>